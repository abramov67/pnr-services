<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context">

    <!-- Annotation-based beans -->
    <context:component-scan base-package="com.company.pnrservices"/>
    <bean id="cubaDataSource_yoda" class="com.haulmont.cuba.core.sys.CubaDataSourceFactoryBean">
        <property name="storeName" value="yoda"/>
        <property name="jndiNameAppProperty" value="cuba.dataSourceJndiName_yoda"/>
    </bean>
    <bean id="entityManagerFactory_yoda" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean"
          lazy-init="false">
        <property name="persistenceXmlLocation" value="file:${cuba.dataDir}/yoda-persistence.xml"/>
        <property name="dataSource" ref="cubaDataSource_yoda"/>
        <property name="jpaVendorAdapter" ref="jpaVendorAdapter"/>
    </bean>
    <bean id="transactionManager_yoda" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="entityManagerFactory_yoda"/>
        <property name="dataSource" ref="cubaDataSource_yoda"/>
        <qualifier type="org.springframework.beans.factory.annotation.Qualifier" value="yoda"/>
    </bean>

</beans>
